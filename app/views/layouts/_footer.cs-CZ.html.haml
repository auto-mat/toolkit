%footer#site-footer(role="contentinfo")
  .wrapper
    #footer-top
      %nav
        %ul
          %li
            %a(href="https://www.facebook.com/prahou.na.kole" class="facebook")
              = t(".facebook_page")
          %li
            %a(href="https://twitter.com/cyclescape" class="twitter") Cyclescape Twitter account
          %li
            %small= t(".github_page_link_html")
          %li
            %small= t(".application_version_html", version: link_to_github_commit)
          %li
            %small= link_to t(".whats_new"), page_path("changelog")
          %li
            %small= link_to t(".cyclescape_blog"), 'http://blog.cyklistesobe.cz/'
          %li
            %small= link_to t(".user_guide"), 'http://blog.cyklistesobe.cz/manual-pro-web-cykliste-sobe/'
    %div{:id => 'supportlogos'}
      %p= t(".supportlogos_introduction_html")
      %ul
        %li
          = link_to image_tag("supportlogos/cyclestreets.png", {title: t(".funding_from_and_created_by", :name => 'CycleStreets'), :alt => 'Logo'}), 'http://www.cyclestreets.net/', :target => "_blank"
        %li
          = link_to image_tag("supportlogos/logo_via.gif", {title: t(".funding_from_and_created_by", :name => 'Fondem T-Mobile'), :alt => 'Logo'}), 'http://www.nadacevia.cz/', :target => "_blank"
        %br
        %li
          = link_to image_tag("supportlogos/loga-fondnno-nros-partnestvi-eeagrants-mala-rgb.png ", {title: t(".funding_from_and_created_by", :name => 'grantem z Islandu, Lichtenštejnska a Norska v rámci EHP fondů'), :alt => 'Logo'}), 'http://www.fondnno.cz', :target => "_blank"
