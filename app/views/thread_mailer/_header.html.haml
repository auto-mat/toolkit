- unless @message.notification_name == :new_thread_leader_message
  - if Authorization::Engine.instance.permit?(:view_profile, object: @message.created_by, user: @subscriber)
    - if @message.created_by.profile.picture
      %div{style: "float: left; margin-right: 10px; max-width: 100px; max-height: 100px"}
        = image_tag(path_to_url(@message.created_by.profile.picture_thumbnail.url), alt: I18n.t("user.profiles.show.profile_picture_title", name: @message.created_by.name), style: "max-width:100%;max-height:100%")
    %span.name
      = link_to @message.created_by.name, user_profile_url(@message.created_by)
  - else
    %span.name
      = @message.created_by.display_name_or_anon
  = t '.committee' if message.committee_created?
  - link = @message.notification_name == :new_document_message ? path_to_url(@message.component.file.url) : thread_url(@message.thread) + "#message_#{@message.id}"
  - message_link = link_to(type, link)
  = raw t ".added_html", message_link: message_link, name: ""
