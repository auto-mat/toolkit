#new-photo-message.pane
  = semantic_form_for PhotoMessage.new, url: thread_photos_path(@thread), html: { class: "navigate-away-warning", multipart: true} do |f|
    = f.inputs do
      = f.input :photo, as: :file, input_html: { accept: 'image/*' }
      = f.input :retained_photo, as: :hidden
      = f.input :caption
      = render "shared/actions", f: f, thread: @thread
    = f.actions do
      = f.action :submit, button_html: message_button_html
