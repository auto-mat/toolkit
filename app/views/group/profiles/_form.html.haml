= semantic_form_for @profile, url: [@profile.group, :profile] do |f|
  = f.inputs do
    = f.input :description
    = f.input :loc_json, as: :hidden
    %li.input
      = f.semantic_errors :location
      = render partial: "shared/edit_map", locals: {thing: @profile, area_only: true}
    = f.input :picture, as: :file
    = f.input :retained_picture, as: :hidden
    = f.input :joining_instructions
  = f.actions
